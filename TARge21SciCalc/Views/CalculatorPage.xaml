<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TARge21SciCalc.Views.CalculatorPage"
             Title="CalculatorPage">

    <Grid
        RowDefinitions="*, 68,48,44,44,48,64,64,64,64"
        ColumnDefinitions="*, *, *, *, *">
        
        <!--color Answer Row-->
        <BoxView
            VerticalOptions="Fill"
            HorizontalOptions="Fill"
            BackgroundColor="#262D37"
            Grid.Row="1"
            Grid.ColumnSpan="5"/>
        
        <!--<Color Scientific rows-->
        <BoxView
            VerticalOptions="Fill"
            HorizontalOptions="Fill"
            BackgroundColor="#2C3240"
            Grid.Row="2"
            Grid.RowSpan="4"
            Grid.ColumnSpan="5"/>
        
        <!-- Area-->
        <Frame
            HasShadow="False"
            Padding="6, 0,4,0"
            Margin="12"
            BorderColor="{StaticResource PrimaryColor}"
            BackgroundColor="#2c3240"
            HorizontalOptions="EndAndExpand"
            VerticalOptions="EndAndExpand"
            Grid.Row ="0"
            Grid.Column="0"
            Grid.ColumnSpan="5">
            <Label
                LineHeight="1.5"
                VerticalTextAlignment="Center"
                VerticalOptions="Center">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="{Binding InputText}" Style="{StaticResource InputBoxLabelStyle}"/>
                    <Span Text="|" FontSize="28" TextColor="{StaticResource PrimaryColor}" Style="{StaticResource InputBoxLabelStyle}"/>
                    <Span Text=" " Style="{StaticResource InputBoxLabelStyle}"/>
                </FormattedString>
            </Label.FormattedText>
            </Label>
        </Frame>
        
        <!--Answer row-->
        <Grid
            ColumnDefinitions="Auto, *"
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="5">

            <Label
                Text="="
                VerticalOptions="Center"
                VerticalTextAlignment="Center"
                Style="{StaticResource EqualsLabelStyle}"
                Margin="16,0"/>

            <Label
                Text="{Binding CalculatedResult, Mode=OneWay}"
                VerticalOptions="Center"
                VerticalTextAlignment="Center"
                HorizontalOptions="End"
                Grid.Column="1"
                Style="{StaticResource ResultLabelStyle}"
                Margin="16,0"/>
        </Grid>
        
        <!--Scientific operators-->
        
        <!--Row1-->
        <Button
            Grid.Row="2"
            Grid.Column="0"
            ZIndex="1"
            Margin="6,10,6,4"
            Style="{StaticResource ScientificButtonStyle}"
            Text="MEAN" />

        <Button
            Grid.Row="2"
            Grid.Column="1"
            ZIndex="1"
            Margin="6,10,6,4"
            Style="{StaticResource ScientificButtonStyle}"
            Text="MOD" />

        <Button
            Grid.Row="2"
            Grid.Column="2"
            ZIndex="1"
            Margin="6,10,6,4"
            Style="{StaticResource ScientificButtonStyle}"
            Text="STD" />

        <Button
            Grid.Row="2"
            Grid.Column="3"
            ZIndex="1"
            Margin="6,10,6,4"
            Style="{StaticResource ScientificButtonStyle}"
            Text="VAR" />

        <Button
            Grid.Row="2"
            Grid.Column="4"
            ZIndex="1"
            Margin="6,10,6,4"
            Style="{StaticResource ScientificButtonStyle}"
            Text="FACT" />

        <!--Row2-->
        <!--tuleb bindida commandiga ScientificOperatorCommand-->

        <Button
            Grid.Row="3"
            Grid.Column="0"
            ZIndex="1"            
            Style="{StaticResource ScientificButtonStyle}"
            Text="SIN"
            Command="{Binding ScientificOperatorCommand}"
            CommandParameter="SIN" />

        <Button
            Grid.Row="3"
            Grid.Column="1"
            ZIndex="1"
            Style="{StaticResource ScientificButtonStyle}"
            Text="COS"
            Command="{Binding ScientificOperatorCommand}"
            CommandParameter="COS" />

        <Button
            Grid.Row="3"
            Grid.Column="2"
            ZIndex="1"
            Style="{StaticResource ScientificButtonStyle}"
            Text="TAN"
            Command="{Binding ScientificOperatorCommand}"
            CommandParameter="TAN" />

        <Button
            Grid.Row="3"
            Grid.Column="3"
            ZIndex="1"
            Style="{StaticResource ScientificButtonStyle}"
            Text="LOG"
            Command="{Binding ScientificOperatorCommand}"
            CommandParameter="LOG" />

        <Button
            Grid.Row="3"
            Grid.Column="4"
            ZIndex="1"
            Style="{StaticResource ScientificButtonStyle}"
            Text="EXP"
            Command="{Binding ScientificOperatorCommand}"
            CommandParameter="EXP" />

        <!-- Row 3 -->
        <Button
            Grid.Row="4"
            Grid.Column="0"
            ZIndex="1"
            Style="{StaticResource ScientificButtonStyle}"
            Text="ASIN"
            Command="{Binding ScientificOperatorCommand}"
            CommandParameter="ASIN" />

        <Button
            Grid.Row="4"
            Grid.Column="1"
            ZIndex="1"
            Style="{StaticResource ScientificButtonStyle}"
            Text="ACOS"
            Command="{Binding ScientificOperatorCommand}"
            CommandParameter="ACOS" />

        <Button
            Grid.Row="4"
            Grid.Column="2"
            ZIndex="1"
            Style="{StaticResource ScientificButtonStyle}"
            Text="ATAN"
            Command="{Binding ScientificOperatorCommand}"
            CommandParameter="ATAN" />

        <Button
            Grid.Row="4"
            Grid.Column="3"
            ZIndex="1"
            Style="{StaticResource ScientificButtonStyle}"
            Text="LOG10"
            Command="{Binding ScientificOperatorCommand}"
            CommandParameter="LOG10" />

        <Button
            Grid.Row="4"
            Grid.Column="4"
            ZIndex="1"
            Style="{StaticResource ScientificButtonStyle}"
            Text="POW"
            Command="{Binding ScientificOperatorCommand}"
            CommandParameter="POW" />

        <!-- Row 4 -->
        <Button
            Grid.Row="5"
            Grid.Column="0"
            ZIndex="1"
            Margin="6,4,6,10"
            Style="{StaticResource ScientificButtonStyle}"
            Text="SQRT"
            Command="{Binding ScientificOperatorCommand}"
            CommandParameter="SQRT" />

        <Button
            Grid.Row="5"
            Grid.Column="1"
            ZIndex="1"
            Margin="6,4,6,10"
            Style="{StaticResource ScientificButtonStyle}"
            Text="ABS"
            Command="{Binding ScientificOperatorCommand}"
            CommandParameter="ABS" />

        <Button
            Grid.Row="5"
            Grid.Column="2"
            ZIndex="1"
            Margin="6,4,6,10"
            Style="{StaticResource ScientificButtonStyle}"
            Text=","
            Command="{Binding RegionOperatorCommand}"
            CommandParameter="," />

        <Button
            Grid.Row="5"
            Grid.Column="3"
            ZIndex="1"
            Margin="6,4,6,10"
            Style="{StaticResource ScientificButtonStyle}"
            Text="("
            Command="{Binding RegionOperatorCommand}"
            CommandParameter="(" />

        <Button
            Grid.Row="5"
            Grid.Column="4"
            ZIndex="1"
            Margin="6,4,6,10"
            Style="{StaticResource ScientificButtonStyle}"
            Text=")"
            Command="{Binding RegionOperatorCommand}"
            CommandParameter=")" />
        
        <!--numbers-->

        <Grid
            ColumnDefinitions="Auto, *"
            Grid.Row="6"
            Grid.Column="4"
            Grid.ColumnSpan="1">

            <!--<Label
                Text="="
                VerticalOptions="Center"
                VerticalTextAlignment="Center"
                Style="{StaticResource EqualsLabelStyle}"
                Margin="16,0"/>-->
            <Button
                Grid.Row="1"
                Grid.Column="1"
                Margin="1,1,1,1"
                Style="{StaticResource NumberButtonStyle}"
                Text="7"
                Command="{Binding NumberInputCommand}"
                CommandParameter="7" />

            <Button
                Grid.Row="1"
                Grid.Column="2"
                Margin="1,1,1,1"
                Style="{StaticResource NumberButtonStyle}"
                Text="8"
                Command="{Binding NumberInputCommand}"
                CommandParameter="8" />

            <Button
                Grid.Row="1"
                Grid.Column="3"
                Margin="1,1,1,1"
                Style="{StaticResource NumberButtonStyle}"
                Text="9"
                Command="{Binding NumberInputCommand}"
                CommandParameter="9" />
            
            <!---->

            <Button
                Grid.Row="2"
                Grid.Column="1"
                Margin="1,1,1,1"
                Style="{StaticResource NumberButtonStyle}"
                Text="4"
                Command="{Binding NumberInputCommand}"
                CommandParameter="4" />

            <Button
                Grid.Row="2"
                Grid.Column="2"
                Margin="1,1,1,1"
                Style="{StaticResource NumberButtonStyle}"
                Text="5"
                Command="{Binding NumberInputCommand}"
                CommandParameter="5" />

            <Button
                Grid.Row="2"
                Grid.Column="3"
                Margin="1,1,1,1"
                Style="{StaticResource NumberButtonStyle}"
                Text="6"
                Command="{Binding NumberInputCommand}"
                CommandParameter="6" />
            
            <!---->

            <Button
                Grid.Row="3"
                Grid.Column="1"
                Margin="1,1,1,1"
                Style="{StaticResource NumberButtonStyle}"
                Text="1"
                Command="{Binding NumberInputCommand}"
                CommandParameter="1" />

            <Button
                Grid.Row="3"
                Grid.Column="2"
                Margin="1,1,1,1"
                Style="{StaticResource NumberButtonStyle}"
                Text="2"
                Command="{Binding NumberInputCommand}"
                CommandParameter="2" />

            <Button
                Grid.Row="3"
                Grid.Column="3"
                Margin="1,1,1,1"
                Style="{StaticResource NumberButtonStyle}"
                Text="3"
                Command="{Binding NumberInputCommand}"
                CommandParameter="3" />
            
            <!---->

            <Button
                Grid.Row="4"
                Grid.Column="1"
                Margin="1,1,1,1"
                Style="{StaticResource NumberButtonStyle}"
                Text="0"
                Command="{Binding NumberInputCommand}"
                CommandParameter="0" />

            <Button
                Grid.Row="4"
                Grid.Column="2"
                Margin="1,1,1,1"
                Style="{StaticResource NumberButtonStyle}"
                Text="."
                Command="{Binding NumberInputCommand}"
                CommandParameter="." />

            <Button
                Grid.Row="1"
                Grid.Column="4"
                Margin="1,1,1,1"
                Style="{StaticResource NumberButtonStyle}"
                Text="⌫ "
                Command="{Binding BackspaceCommand}"/>

        </Grid>

        <!--märgid-->

        <Grid
            ColumnDefinitions="Auto, *"
            Grid.Row="5"
            Grid.Column="4"
            Grid.ColumnSpan="2">

            <Button
                Grid.Row="1"
                Grid.Column="3"
                Margin="1,1,1,1"
                Style="{StaticResource OperatorButtonStyle}"
                Text="AC"
                Command="{Binding ResetCommand}"/>

            <Button
                Grid.Row="2"
                Grid.Column="1"
                Margin="1,1,1,1"
                Style="{StaticResource OperatorButtonStyle}"
                Text="×"
                Command="{Binding MathOperatorCommand}"
                CommandParameter="*" />
            
            <Button
                Grid.Row="2"
                Grid.Column="2"
                Margin="1,1,1,1"
                Style="{StaticResource OperatorButtonStyle}"
                Text="÷"
                Command="{Binding MathOperatorCommand}"
                CommandParameter="/" />

            <Button
                Grid.Row="3"
                Grid.Column="1"
                Margin="1,1,1,1"
                Style="{StaticResource OperatorButtonStyle}"
                Text="+"
                Command="{Binding MathOperatorCommand}"
                CommandParameter="+" />

            <Button
                Grid.Row="3"
                Grid.Column="2"
                Margin="1,1,1,1"
                Style="{StaticResource OperatorButtonStyle}"
                Text="-"
                Command="{Binding MathOperatorCommand}"
                CommandParameter="-" />

            <Button
                Grid.Row="3"
                Grid.Column="4"
                Margin="1,1,1,1"
                Style="{StaticResource OperatorButtonStyle}"
                Text="="
                Command="{Binding CalculateCommand}"/>

        </Grid>

    </Grid>
</ContentPage>